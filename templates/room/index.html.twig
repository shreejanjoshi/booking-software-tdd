{% extends 'base.html.twig' %}

{% block body %}
    {% for message in app.flashes('success') %}
    <div class="alert alert-success">
        <h3>{{ message }}</h3>
    </div>
    {% endfor %}
    <br>
    <div class="container">
    <h2>Add Room</h2>
    <br>
    <table class="table table-striped">
        <thead>
        <tr>
            <td>Room Nr.</td>
            <td>Name</td>
            <td>Only For Premium Members (true / false)</td>
            <td>Delete</td>
            <td><a href="{{ path('room.add') }}">Add</a></td>

        </tr>
        </thead>
        <tbody>
        {% for room in rooms %}
            <tr>
                <td>{{ room.id }}</td>
                <td><a href="{{ path('room.show', {id: room.id}) }}">{{ room.name }}</a></td>
                <td>{{ room.onlyForPremiumMembers }}</td>
                <td><a href="{{ path('room.delete', {id: room.id}) }}">Delete</a></td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
    </div>
{% endblock %}
